                        {% for key, adresse in list_adresses %}
                            <div class="adresses_box">
                                <span>Address : #{{ key+1 }}</span>
                                <h3>{{ adresse.firstName }}  {{ adresse.lastName }}</h3>
                                <p>{{ adresse.company }}</p>
                                <p>{{ adresse.vatnumber }}</p>
                                <p>{{ adresse.adresse }}</p>
                                <p>{{ adresse.zipcode }}</p>
                                <p>{{ adresse.city }}</p>
                                <p>{{ adresse.country }}</p>
                                <div class="row btn_row">
                                    <a class="button mt-20 mb-50" href="#">{% trans %}SELECT{% endtrans %}</a>
                                </div>
                                <div class="row btn_row">
                                    <a class="button_inset m-8" href="{{ path('adresse_edit', {'id': adresse.id}) }}">{% trans %}EDIT{% endtrans %}</a>
                                    {{ include('adresse/_delete_form.html.twig') }}
                                </div>
                            </div>
