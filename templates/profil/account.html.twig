{% extends 'base.html.twig' %}
{% block title %}BuyActionController!
{% endblock %}
{% block body %}

    <div class="d-flex align-items-start">
        <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <button class="nav-link active" id="button_adresses" data-bs-toggle="pill" data-bs-target="#button_adresses"
                    type="button" role="tab" aria-controls="button_adresses" aria-selected="true">My adresses
            </button>
            <button class="nav-link" id="button_orders" data-bs-toggle="pill" data-bs-target="#button_orders"
                    type="button" role="tab" aria-controls="button_orders" aria-selected="false">My orders
            </button>
            <button class="nav-link" id="button_contactus" data-bs-toggle="pill" data-bs-target="#button_contactus"
                    type="button" role="tab" aria-controls="button_contact" aria-selected="false">Contact us
            </button>
            <button class="nav-link" id="button_logout" data-bs-toggle="pill" data-bs-target="#button_logout"
                    type="button" role="tab" aria-controls="button_logout" aria-selected="false">Logout
            </button>
        </div>

        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="button_adresses_content" role="tabpanel"
                 aria-labelledby="button_adresses">
                {# debut des cards #}
                <div class="row">
                    {% for key, adresse in list_adresses %}
                        <div class="col-lg-3 col-md-6">
                            <div class="card">
                                <a href="" class="btn btn-primary">Choose</a>
                                <div class="card-body" style="width: 35rem;">
                                    <h5 class="card-title">Address #{{ key+1 }}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">{{ adresse.firstName }}  {{ adresse.lastName }}</h6>
                                    <p class="card-text">{{ adresse.adresse }}</p>
                                    <p class="card-text">{{ adresse.zipcode }}</p>
                                    <p class="card-text">{{ adresse.city }}</p>
                                    <p class="card-text">{{ adresse.country }}</p>
                                    <a href="{{ path('adresse_edit', {'id': adresse.id}) }}" class="btn btn-success">Edit</a>
                                    <a href="{{ path('adresse_delete', {'id': adresse.id}) }}" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="tab-pane fade" id="button_orders_content" role="tabpanel" aria-labelledby="button_orders">...
            </div>
            <div class="tab-pane fade" id="button_contactus_content" role="tabpanel" aria-labelledby="button_contactus">
                // Debut du formulaire de contact des utilisateurs connect√©
                <div class="row">
                    <h4> Need assistance with your purchase?</h4>

                    <a aria-current="contact" class="btn btn-secondary" href="{{ path('message_profil') }}">Contact us</a>

                </div>



            </div>
        </div>
    </div>
{% endblock %}
