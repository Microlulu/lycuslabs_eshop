{% extends 'base_admin.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block contain %}
    <h1>Images Carousel </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carousel in carousels %}
            <tr>
                <td>{{ carousel.id }}</td>
                 <td><img src="{{ asset('images/carousel/'~ carousel.image )}}" alt="{{ carousel.shortcut}}" style="width:200px"></td>
                <td>{{ carousel.title }}</td>
                <td>{{ carousel.text }}</td>
                <td>
                    <a class="button_dash" href="{{ path('carousel_show', {'id': carousel.id}) }}">SHOW</a>
                    <a class="button_dash" href="{{ path('carousel_edit', {'id': carousel.id}) }}">EDIT</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="button" href="{{ path('carousel_new') }}">Create new</a>
{% endblock %}
