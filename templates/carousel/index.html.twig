{% extends 'base_admin.html.twig' %}

{% block title %}Carousel Customers Reviews{% endblock %}

{% block contain %}
    <article class="dash_contain">

        <h2>Images Carousel Customers Reviews</h2>
        <p> For now, this option is not available, but it will be soon. You will be able to change images of the future carousel that illustrate the customers reviews.
        Please be patient.</p>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for carousel in carousels %}
                <tr>
                    <td>{{ carousel.id }}</td>
                    <td><img src="{{ asset('images/carousel/'~ carousel.image ) }}" alt="{{ carousel.shortcut }}" style="width: 90px;"></td>
                    <td>{{ carousel.title }}</td>
                    <td>{{ carousel.text }}</td>
                    <td>
                        <a class="button_dash" href="{{ path('carousel_show', {'id': carousel.id}) }}">SHOW</a>
                        <a class="button_dash" href="{{ path('carousel_edit', {'id': carousel.id}) }}">EDIT</a>
                        <a href="{{ path('carousel_delete', {'id': carousel.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="button-desk">
            <a class="button" href="{{ path('carousel_new') }}">Create new</a>
        </div>
    </article>
    <h4 class="mobile_responsive">
        Please use a Desktop version to access to your admin panel !
    </h4>
    <aside class="responsive_table">
        {% for carousel in carousels %}
            <br>
            <div class="row">
                <h4>Id</h4> - <h4>{{ carousel.id }}</h4>
            </div>
            <div class="row">
                 <img src="{{ asset('images/carousel/'~ carousel.image ) }}" alt="{{ carousel.shortcut }}" style="width: 150px;">
            </div>
            <div class="row">
                <h4>Title</h4> - <h4>{{ carousel.title }}</h4>
            </div>
            <div class="row">
                <h4>Text</h4> - <h4>{{ carousel.text }}</h4>
            </div>
            <div class="row">
                <h4>Actions</h4> - <a class="button_dash" href="{{ path('carousel_show', {'id': carousel.id}) }}">SHOW</a> -
                <a class="button_dash" href="{{ path('carousel_edit', {'id': carousel.id}) }}">EDIT</a> -
                <a href="{{ path('carousel_delete', {'id': carousel.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>
            </div>
            <br>
            <hr>
        {% else %}
            <p>There is no images in the carousel yet !</p>
        {% endfor %}
        <div class="button-mob mt-30">
            <a class="button" href="{{ path('carousel_new') }}">Create new</a>
        </div>
    </aside>
{% endblock %}

