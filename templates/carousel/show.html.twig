{% extends 'base.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
    <h1>Carousel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/carousel/' ~ carousel.image) }}" alt="{{ carousel.shortcut }}" style="width:200px"></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ carousel.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ carousel.text }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('carousel_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('carousel_edit', {'id': carousel.id}) }}"><i class="far fa-edit"> edit</i></a>

    {{ include('carousel/_delete_form.html.twig') }}
{% endblock %}
