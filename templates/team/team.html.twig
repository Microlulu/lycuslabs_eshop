{% extends 'base.html.twig' %}
 {% block title %}OUR TEAM{% endblock %}

 {% block body %}

     <section>
         <h1>TEAM</h1>
         <div class="team_container">
             <div class="team-row">
                 {% for member in teams %}
                     <div class="member">
                         <img class="imgBox" src="{{ asset('images/team/' ~ member.photo ) }}" alt="{{ member.shortcut }}"/>
                         <h2>{{ member.firstname ~ ' ' ~ member.lastname }}</h2>
                         <h3>{{ member.job }}</h3>
                         <p>
                             {{ member.description }}
                         </p>
                     </div>
                 {% endfor %}
             </div>
         </div>
     </section>


 {% endblock %}
