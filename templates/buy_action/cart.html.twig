{% extends 'base.html.twig' %}

{% block title %}Shopping cart{% endblock %}

{% block body %}
    <div class="wrapper_cart">
        <h1>Shopping Cart</h1>
        <div class="project">
            <div class="shop">
                <div class="box_article">
                    <img src="{{ asset('images/products/6203b36fcaaab.jpg') }}" alt="#">
                    <div class="content_article">
                        <h3>NOM DU PRODUIT</h3>
                        <h4 class="mb-10">Price: 500€</h4>
                        <label class="qty">Quantity</label>
                        <input type="number" value="1">
                        <button aria-label="remove" class="remove">REMOVE
                        </button>
                    </div>
                </div>

                <div class="box_article">
                    <img src="{{ asset('images/products/6203b36fcaaab.jpg') }}" alt="#">
                    <div class="content_article">
                        <h3>NOM DU PRODUIT 4</h3>
                        <h4 class="mb-10">Price: 4500€</h4>
                        <label class="qty">Quantity</label>
                        <input type="number" value="1">
                        <button aria-label="remove" class="remove">REMOVE
                        </button>
                    </div>
                </div>

                <div class="box_article">
                    <img src="{{ asset('images/products/6203b36fcaaab.jpg') }}" alt="#">
                    <div class="content_article">
                        <h3>NOM DU PRODUIT 3</h3>
                        <h4 class="mb-10">Price: 5500€</h4>
                        <label class="qty">Quantity</label>
                        <input type="number" value="1">
                        <button aria-label="remove" class="remove">REMOVE
                        </button>
                    </div>
                </div>

            </div>
            {# COTE DROIT DU PANIER #}
            <div class="right_bar">
                <div class="relative">
                    <p><span>Subtotal</span> <span> 7000 €</span></p>
                    <hr>
                    <p><span>Coupon Code</span> <input placeholder="DISCOUNT20"></p>
                    <hr>
                    <p class="total_price"><span>TOTAL</span> <span>7000€</span></p>

                    <a href="payment.html.twig">Checkout</a>
                </div>
            </div>
        </div>
    </div>
    {% block footer %}
        {% include 'footer.html.twig' %}
    {% endblock %}

{% endblock %}