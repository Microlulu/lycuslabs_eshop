{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category : : {{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ category.createdat ? category.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{{ category.deletedat ? category.deletedat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ category.updatedat ? category.updatedat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}"><i class="far fa-edit">edit</i></a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
