{% extends 'base.html.twig' %}

{% block title %}HomeController!{% endblock %}

{% block body %}

	<main>

		<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
			<div id="carouselExampleIndicators" class="carousel slide my-carousel-home" data-bs-ride="carousel">

				<div class="carousel-indicators">
					{% for item in carousel %}
						{% if loop.first %}
							<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ loop.index0 }}" class="active" aria-current="true" aria-label="Slide {{ loop.index0 + 1 }}"></button>
						{% else %}
							<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ loop.index0 }}" aria-label="Slide 2"></button>
						{% endif %}
					{% endfor %}
				</div>

				<div class="carousel-inner my-carousel-inner">
					{% for item in carousel %}
						{% if loop.first %}
							<div class="carousel-item my-carousel-item active">
							{% else %}
								<div class="carousel-item my-carousel-item">
								{% endif %}
								<img src="{{ asset('images/carousel' ~ item.image) }}" class="d-block w-100" alt="{{ item.shortcut }}">
								<div class="carousel-caption d-none d-md-block">
									<h5 class="display-2">{{ item.title }}</h5>
									<p class="fs-2">{{ item.text }}</p>
								</div>
							</div>
						{% endfor %}
					</div>


					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
			</div>


			<!-- Marketing messaging and featurettes
																			  ================================================== -->




			<!-- START THE SERVICES -->

			<hr class="featurette-divider">
			<div class="container mt-5 ">
				<div class="justify-content-center row">
					{% for item in services %}
						<article class="col-10 btn-toolbar d-flex">
							{% if loop.index0 is even %}
								{{ include ("home/service_template_1.html.twig") }}
							{% else %}
								{{ include ("home/service_template_2.html.twig") }}
							{% endif %}
						</article>
					{% endfor %}
				</div>


				<!-- /END THE FEATURETTES -->

			</div>
		</main>
{% endblock %}
