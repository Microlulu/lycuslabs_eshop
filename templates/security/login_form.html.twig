{% extends 'base.html.twig' %}
{% block title %}LOGIN / REGISTER{% endblock %}

{% block body %}
{# FORM DOUBLE NEUMORPHISME  #}
{# REGISTRATION FORM #}
{{ form_start(registrationForm) }}

{#  REGISTER + MESSAGE FLASH A FAIRE EN CSS
<div
        class="message-flash">
    {# je viens réincorporer tout mon formulaire de base creer par symfony dans un modèle, j'ai créé
    {% for flashError in app.flashes('verify_email_error') %}
    <div class="" role="alert">{{ flashError }}</div>
    {% endfor %}
</div>
#}


<div class="main">
    <div class="form_container a-container" id="a-container">
        <form class="form" id="a-form" method="post" action="app_register">
            <h2 class="title">Create Account</h2>
            <div class="form__icons">
                <img class="form__icon" src="{{ asset('images/svg/fb.svg') }}" alt=""/>
                <img class="form__icon" src="{{ asset('images/svg/instagram.svg') }}"/>
                <img class="form__icon" src="{{ asset('images/svg/twitter.svg') }}"/>
                <img class="form__icon" src="{{ asset('images/svg/linkedin.svg') }}"/>
            </div>
            <span class="form__span">or use email for registration</span>
            <input class="form__input" type="text" placeholder="Firstname"/>
            <input class="form__input" type="text" placeholder="Lastname"/>
            <input class="form__input" type="text" placeholder="Email"/>
            <input class="form__input" type="password" placeholder="Password" name="password" id="inputPassword" autocomplete="current-password" required/>
            <input class="form__input" type="password" placeholder="Repeat Password" name="password" id="inputPassword" autocomplete="current-password" required/>
            <input class="form__input" type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button href="{{ path('app_register') }}" class="button submit" type="submit">SIGN UP</button>
        </form>
    </div>
    {{ form_end(registrationForm) }}
    <--
    {# LOGIN + MESSAGE INFORMATIF SUR L'UTILISATEUR LOGGER + MESSAGE EN CAS DE PROBLEME
    {% if error %}
    <div class="">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% endif %}
    #}
