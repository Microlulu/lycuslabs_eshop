    {# LOGIN FORM #}
    <div class="container b-container" id="b-container">
        <form class="form" id="b-form" method="post" action="app_login">
            <h2 class="title">Sign in to Website</h2>
            <div class="form__icons">
                <img class="form__icon" src="{{ asset('images/svg/fb.svg') }}" alt="facebook"/>
                <img class="form__icon" src="{{ asset('images/svg/instagram.svg') }}" alt="instagram"/>
                <img class="form__icon" src="{{ asset('images/svg/twitter.svg') }}" alt="twitter"/>
                <img class="form__icon" src="{{ asset('images/svg/linkedin.svg') }}" alt="linkedin"/>
            </div>
            <span class="form__span">or use your email account</span>
            <input class="form__input" type="text" placeholder="Email"/>
            <input class="form__input" type="password" placeholder="Password" name="password" id="inputPassword" autocomplete="current-password" required/>
            <a href="{{ path('app_forgot_password_request')}}" class="form__link">Forgot your password?</a>
            <button  href="{{ path('app_login') }}" class="button submit" type="submit">SIGN IN</button>
        </form>
    </div>


    {# SWITCH #}
    <div class="switch" id="switch-cnt">
        <div class="switch__circle"></div>
        <div class="switch__circle switch__circle--t"></div>
        <div class="switch__container" id="switch-c1">
            <h2 class="title">Welcome Back !</h2>
            <p class="description">To keep connected with us please login with your personal info</p>
            <button class="switch__button button switch-btn">SIGN IN</button>
        </div>
        <div class="switch__container is-hidden" id="switch-c2">
            <h2 class="switch__title title">Hello Friend !</h2>
            <p class="description">Enter your personal details and start journey with us</p>
            <button class="switch__button button switch-btn">SIGN UP</button>
        </div>
    </div>
</div>

{% endblock %}
<script src="{{ asset('assets/js/script.js') }}"></script>