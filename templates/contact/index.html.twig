{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
	<div class="col">
	<div class="box justify_cnt_center mb-25">
		<div class="contact_container">
			<div class="msg">
				<div class="heading">
					<h1>{% trans %}CONTACT{% endtrans %}</h1>
					<h4>{% trans %}Do you have a project in mind?{% endtrans %}
						{% trans %}or a question?
							Our professionals are at{% endtrans %}
						{% trans %}your disposal.{% endtrans %}</h4>
					<h5>{% trans %}Don't remember the services we offer? Take a look at the page {% endtrans %} <a class="link-design" href="{{ path('our_services') }}">{% trans %} Services {% endtrans %}</a></h5>

				</div>
				{{ form_start(contact_form) }}
				<div class="user">
					<img class="small_icon" src="{{ asset('images/svg/account.png') }}" alt="firstname" aria-label="enter your firstname">
					{{ form_widget(contact_form.firstname) }}
				</div>
				<div class="user">
					<img class="small_icon" src="{{ asset('images/svg/account.png') }}" alt="lastname" aria-label="enter your lastname">
					{{ form_widget(contact_form.lastname) }}

				</div>
				<div class="user">
					<img class="small_icon" src="{{ asset('images/svg/email.png') }}" alt="email" aria-label="enter your email">
					{{ form_widget(contact_form.email) }}

				</div>
				<div class="user-message">
					{{ form_widget(contact_form.message) }}
				</div>
				<div class="btn-form">
			{# Le <input type="submit"> d√©finit un bouton d'envoi qui soumet toutes les valeurs du formulaire#}
					<input type="submit" name="submit" value="SUBMIT">
				</div>
				{{ form_end(contact_form) }}

			</div>
			<div class="image_contact">
				<img src="{{ asset('images/ExcavatorGIF.gif') }}" alt="truck 3d gif" aria-label="gif of a truck in 3d ">
			</div>
		</div>


	</div>
	{% block footer %}
		{% include 'footer.html.twig' %}
	{% endblock %}
	</div>
{% endblock %}
