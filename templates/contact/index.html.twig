{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
	<div class="box">
		<div class="contact_container">
			<div class="msg">
				<div class="heading">
					<h3>CONTACT</h3>
					<h5>Do you have a project in mind?<br>
						or a question?
						Our professionals are at<br>
						your disposal.</h5>
				</div>
				{{ form_start(contact_form) }}
				<div class="user">

					{{ form_widget(contact_form.firstname) }}
				</div>
				<div class="user">

					{{ form_widget(contact_form.lastname) }}

				</div>
				<div class="user">

					{{ form_widget(contact_form.email) }}

				</div>
				<div class="user-message">

					{{ form_widget(contact_form.message) }}

				</div>
				<div class="btn">
					<input type="submit" name="" value="SUBMIT">
				</div>
				{{ form_end(contact_form) }}

			</div>
			<div class="image_contact">
				<img src="{{ asset('images/ExcavatorGIF.gif') }}">
			</div>
		</div>
	</div>

{% endblock %}
