{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
    <div class="box">
        <div class="contact_container">
            <div class="msg">
                <div class="heading">
                    <h3>Contact Us</h3>
                    <h5>A project in mind?
                        or a simple question? </h5>
                    <h6>Our professionals are at your disposal</h6>
                </div>
                <div class="user">
                    <input type="text" name="" placeholder="Firstname">
                </div>
                <div class="user">
                    <input type="text" name="" placeholder="Lastname">
                </div>
                <div class="user">
                    <input type="email" name="" placeholder="Email">
                </div>
                <div class="user-message">
                    <input type="text" name="" placeholder="Message">
                </div>
                <div class="btn">
                    <input type="submit" name="" value="Submit">
                </div>
            </div>
            <div class="image_contact">
                <img src="{{ asset('images/ExcavatorGIF.gif') }}">
            </div>
        </div>
    </div>
{% endblock %}