{% extends 'base_admin.html.twig' %}

{% block title %}Images Product index{% endblock %}

{% block contain %}
    <article class="dash_contain">

    <h2>Images of Product index</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Alt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for images_product in images_products %}
            <tr>
                <td>{{ images_product.id }}</td>
                <td><img src="{{ asset('images/products/' ~ images_product.image) }}" alt="{{ images_product.alt }}" style="width: 120px">
                </td>
                <td>{{ images_product.alt }}</td>
                <td>
                    <a class="button_dash" href="{{ path('images_product_show', {'id': images_product.id}) }}">SHOW</a>
                    <a class="button_dash" href="{{ path('images_product_edit', {'id': images_product.id}) }}">EDIT</a>
                    <a href="{{ path('images_product_delete', {'id': images_product.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="button-desk">
        <a class="button" href="{{ path('images_product_new') }}">Create new</a>
    </div>
    </article>
    <h4 class="mobile_responsive">
        Please use a Desktop version to access to your admin panel !
    </h4>
    <aside class="responsive_table">
        {% for images_product in images_products %}
            <br>
            <div class="row">
                <h4>Id</h4> - <h4>{{ images_product.id }}</h4>
            </div>
            <div class="row">
                <img src="{{ asset('images/products/' ~ images_product.image) }}" alt="{{ images_product.alt }}"  style="width: 120px">
            </div>
            <div class="row">
                <h4>Shortcut</h4> - <h4>{{ images_product.alt }}</h4>
            </div>
            <div class="row">
                <h4>Actions</h4> -
                <a class="button_dash" href="{{ path('images_product_show', {'id': images_product.id}) }}">SHOW</a> -
                <a class="button_dash" href="{{ path('images_product_edit', {'id': images_product.id}) }}">EDIT</a> -
                <a href="{{ path('images_product_delete', {'id': images_product.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>
            </div>
            <br>
            <hr>
        {% else %}
            <p>There is no additional images registered in your products yet !</p>
        {% endfor %}
        <div class="button-mob mt-30">
            <a class="button" href="{{ path('images_product_new') }}">Create new</a>
        </div>
    </aside>
{% endblock %}
