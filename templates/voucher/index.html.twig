{% extends 'base_admin.html.twig' %}

{% block title %}Vouchers
{% endblock %}

{% block contain %}
<article class="dash_contain">

<h2>Voucher index</h2>
	{% for message in app.flashes('message') %}
		<div class="alert alert-warning">
			{{ message }}
		</div>
	{% endfor %}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Discount</th>
				<th>Name</th>
				<th>Date_start</th>
				<th>Date_end</th>
				<th>Couponcode</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for voucher in vouchers %}
				<tr>
					<td>{{ voucher.id }}</td>
					<td>{{ voucher.discount }}</td>
					<td>{{ voucher.name }}</td>
					<td>{{ voucher.dateStart ? voucher.dateStart|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ voucher.dateEnd ? voucher.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ voucher.couponcode }}</td>
					<td>
						<a class="button_dash" href="{{ path('voucher_show', {'id': voucher.id}) }}">
							SHOW
						</a>
						<a class="button_dash" href="{{ path('voucher_edit', {'id': voucher.id}) }}">
							EDIT
						</a>
						<a href="{{ path('voucher_delete', {'id': voucher.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="button-desk">
		<a class="button" href="{{ path('voucher_new') }}">Create new</a>
	</div>
</article>
	<h4 class="mobile_responsive">
		Please use a Desktop version to access to your admin panel !
	</h4>

	<aside class="responsive_table">
		{% for voucher in vouchers %}
			<br>
			<div class="row">
				<h4>Id</h4> - <h4>{{ voucher.id }}</h4>
			</div>
			<div class="row">
				<h4>Discount</h4> - <h4>{{ voucher.discount }}</h4>
			</div>
			<div class="row">
				<h4>Name</h4> - <h4>{{ voucher.name }}</h4>
			</div>
			<div class="row">
				<h4>Date_start</h4><h4>{{ voucher.dateStart ? voucher.dateStart|date('Y-m-d H:i:s') : '' }}</h4>
			</div>
			<div class="row">
				<h4>Date_end</h4><h4>{{ voucher.dateEnd ? voucher.dateEnd|date('Y-m-d H:i:s') : '' }}</h4>
			</div>
			<div class="row">
				<h4>Coupon Code</h4> - <h4>{{ voucher.couponcode }}</h4>
			</div>

			<div class="row">
				<h4>Actions</h4> - <a class="button_dash" href="{{ path('voucher_show', {'id': voucher.id}) }}">
					SHOW
				</a> -
				<a class="button_dash" href="{{ path('voucher_edit', {'id': voucher.id}) }}">
					EDIT
				</a> -
				<a href="{{ path('voucher_delete', {'id': voucher.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>

			</div>
			<br>
			<hr>
		{% else %}
			<p>There is no voucher registered yet !</p>
		{% endfor %}
		<div class="button-mob mt-30">
			<a class="button" href="{{ path('voucher_new') }}">Create new</a>
		</div>
	</aside>
{% endblock %}

