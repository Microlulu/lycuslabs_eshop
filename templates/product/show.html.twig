{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Shortcut</th>
                <td>{{ product.shortcut }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Additional Description</th>
                <td>{{ product.descriptionadd }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }} â‚¬</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/products/' ~ product.image) }}" alt="{{ product.shortcut }}" style="width:200px"></td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ product.createdat ? product.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ product.updatedat ? product.updatedat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('product_index') }}">back to list</a>
  
    <a class="btn btn-primary" href="{{ path('product_edit', {'id': product.id}) }}"><i class="far fa-edit"> Edit</i></a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
