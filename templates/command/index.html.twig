<section>
    <table>
        <tr>
            <th>{% trans %}Reference{% endtrans %}</th>
            <th>{% trans %}Date{% endtrans %}
                <button class="img_sorted">
                    <img class="img_sort" src="{{ asset('images/svg/chevron.png') }}" alt="sort by">
                </button>
            </th>
            <th>{% trans %}Price{% endtrans %}
                <button class="img_sorted">
                    <img class="img_sort" src="{{ asset('images/svg/chevron.png') }}" alt="sort by">
                </button>
            <th>{% trans %}Invoice{% endtrans %}</th>
        </tr>
        {% for command in commands %}
        <tr>
            <td>{{ command.reference }}</td>
            <td>{{ command.dateOrder|date('d-m-y') }}</td>
            <td>{{ command.totalPrice }} €</td>
            <td><img class="img_downloads" src="{{ asset('images/svg/downloads.png') }}"
                     alt="Download invoice"></td>
        </tr>
       {% endfor %}
    </table>


    {# Design pour la partie responsive (téléphones, tablettes..) #}
    {% for command in commands %}
        <div class="container_responsive_profile mb-10">

        <h4>{% trans %}Reference :{% endtrans %}</h4>
        <p>{{ command.reference }}</p>
        <h4>{% trans %}Date :{% endtrans %}</h4>
        <p>{{ command.dateOrder|date('d-m-y') }}</p>
        <h4>{% trans %}Price{% endtrans %}</h4>
        <p>{{ command.totalPrice }} €</p>
        <h4>{% trans %}Invoice :{% endtrans %} <img class="img_downloads" src="{{ asset('images/svg/downloads.png') }}"
                           alt="Download invoice">
        </h4>
    </div>
    {% endfor %}

</section>
