{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>{% trans %}Reset your password{% endtrans %}</h1>
<section>
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                {% trans %}Enter your email address and we will send you a
                link to reset your password.{% endtrans %}
            </small>
        </div>

        <button class="button mt-30">{% trans %}Send password reset email{% endtrans %}</button>
    {{ form_end(requestForm) }}
</section>
    {% block footer %}
        {% include 'footer.html.twig' %}
    {% endblock %}

{% endblock %}
