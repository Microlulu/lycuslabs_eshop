<article class="service_container_inset right_side">
    <div>
        <div class="txt_right">
            <h2>{{ item.title }}</h2>
            <h3>{{ item.subtitle }}</h3>
        </div>
        <div class="row">
            <div class="text_right">
                <p>{{ item.text }}</p>
            </div>
            <div class="imgServ_Box">
                <img src="{{ asset('images/services/' ~ item.image) }}" alt="{{ item.shortcut }}">
            </div>
            <div class="small-img-row mt-20">
                {% for image in images %}
                    <div class="small-img-col">
                        <img src="{{ asset('images/services/' ~ image.image ) }}"
                             alt="{{ image.alt }}" class="small-img">
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</article>