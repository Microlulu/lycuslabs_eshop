{% extends 'base_admin.html.twig' %}

{% block title %}Services{% endblock %}

{% block contain %}
<article class="dash_contain">

<h2>Services</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Shortcut</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td><img src="{{ asset('images/services/' ~ service.image) }}" alt="{{ service.shortcut }}" style="width: 90px;"></td>
                <td>{{ service.title }}</td>
                <td>{{ service.subtitle }}</td>
                <td>{{ service.shortcut}}</td>
                <td>{{ service.text |length > 50 ? service.text|slice(0, 50) ~ '...' : service.text }}</td>
                <td>
                    <a class="button_dash" href="{{ path('service_show', {'id': service.id}) }}">SHOW</a>
                    <a class="button_dash" href="{{ path('service_edit', {'id': service.id}) }}">EDIT</a>
                    <a href="{{ path('services_delete', {'id': service.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="button-desk">
        <a class="button" href="{{ path('service_new') }}">Create new</a>
    </div>
</article>
    <h4 class="mobile_responsive">
        Please use a Desktop version to access to your admin panel !
    </h4>


    <aside class="responsive_table">
        {% for service in services %}
            <br>
            <div class="row">
                <h4>Id</h4> - <h4>{{ service.id }}</h4>
            </div>
            <div class="row">
                <img src="{{ asset('images/services/' ~ service.image) }}" alt="{{ service.shortcut }}" style="width:150px;">
            </div>
            <div class="row">
                <h4>Title</h4> - <h4>{{ service.title }}</h4>
            </div>
            <div class="row">
                <h4>Subtitle</h4> - <h4>{{ service.subtitle }}</h4>
            </div>
            <div class="row">
                <h4>Shortcut</h4> - <h4>{{ service.shortcut }}</h4>
            </div>
            <div class="row">
                <h4>Text</h4> - <h4>{{ service.text |length > 50 ? service.text|slice(0, 50) ~ '...' : service.text }}</h4>
            </div>
            <div class="row">
                <h4>Actions</h4> -   <a class="button_dash" href="{{ path('service_show', {'id': service.id}) }}">SHOW</a> -
                <a class="button_dash" href="{{ path('service_edit', {'id': service.id}) }}">EDIT</a> -
                <a href="{{ path('services_delete', {'id': service.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>
            </div>
            <br>
            <hr>
        {% else %}
            <p>There is no categories registered yet !</p>
        {% endfor %}
        <div class="button-mob mt-30">
            <a class="button" href="{{ path('category_new') }}">Create new</a>
        </div>
    </aside>
{% endblock %}

