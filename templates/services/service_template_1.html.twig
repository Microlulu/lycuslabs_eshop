<article class="service_container left_side">
    <div>
        <div>
            <h2>{{ item.title }}</h2>
            <h3>{{ item.subtitle }}</h3>
        </div>
        <div class="row">
            <div class="imgServ_Box mt-5">
                <img src="{{ asset('images/services/' ~ item.image) }}" alt="{{ item.shortcut }}">
            </div>
            <div class="text_left">
                <p>{{ item.text }}</p>
            </div>
        </div>
    </div>
</article>