{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <h1>Services</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/services/' ~ service.image) }}" alt="{{ service.shortcut }}" style="width:80px"></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ service.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ service.subtitle }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ service.text }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('services_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('service_edit', {'id': service.id}) }}"><i class="far fa-edit"> edit</i></a>

    {{ include('services/_delete_form.html.twig') }}
{% endblock %}
