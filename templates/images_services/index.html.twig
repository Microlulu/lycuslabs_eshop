{% extends 'base_admin.html.twig' %}

{% block title %}Images Services index{% endblock %}

{% block contain %}
<article class="dash_contain">

<h2>Images of Services index</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Alt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image_service in images_services %}
            <tr>
                <td>{{ image_service.id }}</td>
                <td><img src="{{ asset('images/services/' ~ image_service.image) }}" alt="{{ image_service.alt }}" style="width: 120px;"></td>
                <td>{{ image_service.alt }}</td>
                <td>
                    <a class="button_dash" href="{{ path('images_services_show', {'id': image_service.id}) }}">SHOW</a>
                    <a class="button_dash" href="{{ path('images_services_edit', {'id': image_service.id}) }}">EDIT</a>
                    <a href="{{ path('images_services_delete', {'id': image_service.id}) }}"><img id="bin" alt="bin" src="{{ asset('images/svg/bin.png') }}"></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="button-desk">
        <a class="button" href="{{ path('images_services_new') }}">Create new</a>
    </div>
</article>
    <h4 class="mobile_responsive">
        Please use a Desktop version to access to your admin panel !
    </h4>
    <aside class="responsive_table">
        {% for images_service in images_services %}
            <br>
            <div class="row">
                <h4>Id</h4> - <h4>{{ images_service.id }}</h4>
            </div>
            <div class="row">
                <img src="{{ asset('images/service/' ~ images_service.image) }}" alt="{{ images_service.alt }}" style="width: 120px">
            </div>
            <div class="row">
                <h4>Shortcut</h4> - <h4>{{ images_service.alt }}</h4>
            </div>
            <div class="row">
                <h4>Actions</h4> -
                <a class="button_dash" href="{{ path('images_services_show', {'id': images_service.id}) }}">SHOW</a> -
                <a class="button_dash" href="{{ path('images_services_edit', {'id': images_service.id}) }}">EDIT</a> -
            </div>
            <br>
            <hr>
        {% else %}
            <p>There is no additional images registered in your services yet !</p>
        {% endfor %}
        <div class="button-mob mt-30">
            <a class="button" href="{{ path('images_services_new') }}">Create new</a>
        </div>
    </aside>
{% endblock %}
